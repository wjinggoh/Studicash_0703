<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/goalRecordName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/concert_one"
        android:text="Goal Name"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/goalRecordIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/goalRecordDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/concert_one"
        android:text="Goal Date"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/goalRecordName"
        app:layout_constraintTop_toBottomOf="@+id/goalRecordName" />

    <Button
        android:id="@+id/goalRecordDeleteBtn"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#FF0000"
        android:fontFamily="@font/concert_one"
        android:text="Delete"
        android:textSize="18sp"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="RM"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/goalRecordDate"
        app:layout_constraintTop_toBottomOf="@+id/goalRecordDate" />

    <TextView
        android:id="@+id/goalRecordAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="Amount"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView35"
        app:layout_constraintStart_toEndOf="@+id/textView35"
        app:layout_constraintTop_toTopOf="@+id/textView35" />

    <ImageView
        android:id="@+id/goalRecordIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/goal" />
</androidx.constraintlayout.widget.ConstraintLayout>