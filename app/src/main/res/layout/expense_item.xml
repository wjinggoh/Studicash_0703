<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="3dp"
    android:background="@drawable/background_with_border_grey">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="140dp">

        <ImageView
            android:id="@+id/expenseIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/expense" />

        <TextView
            android:id="@+id/expensetitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/concert_one"
            android:text="Expense Title"
            android:textAllCaps="true"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/expenseIcon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/yourexpenseAmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/concert_one"
            android:text="Expense Amount"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/expenseAmtTxt"
            app:layout_constraintStart_toEndOf="@+id/expenseAmtTxt"
            app:layout_constraintTop_toTopOf="@+id/expenseAmtTxt" />

        <TextView
            android:id="@+id/dateView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/concert_one"
            android:text="Date"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/datetitle"
            app:layout_constraintTop_toBottomOf="@+id/yourexpenseAmt" />

        <TextView
            android:id="@+id/categories_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/concert_one"
            android:text="Category"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/categorytitle"
            app:layout_constraintStart_toEndOf="@+id/categorytitle"
            app:layout_constraintTop_toBottomOf="@+id/dateView" />

        <TextView
            android:id="@+id/paymentmethod_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/concert_one"
            android:text="Payment Method"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView10"
            app:layout_constraintStart_toEndOf="@+id/textView10"
            app:layout_constraintTop_toTopOf="@+id/textView10" />

        <TextView
            android:id="@+id/expenseAmtTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="@string/expenseamttitle"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/expensetitle"
            app:layout_constraintTop_toBottomOf="@+id/expensetitle" />

        <TextView
            android:id="@+id/datetitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="@string/datetitle"
            app:layout_constraintStart_toStartOf="@+id/expenseAmtTxt"
            app:layout_constraintTop_toBottomOf="@+id/expenseAmtTxt" />

        <TextView
            android:id="@+id/categorytitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="@string/categorytitle"
            app:layout_constraintStart_toStartOf="@+id/datetitle"
            app:layout_constraintTop_toBottomOf="@+id/datetitle" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="@string/paymentmethodtitle"
            app:layout_constraintStart_toStartOf="@+id/categorytitle"
            app:layout_constraintTop_toBottomOf="@+id/categorytitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
